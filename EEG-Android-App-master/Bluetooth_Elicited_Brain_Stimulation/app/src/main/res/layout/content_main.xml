<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.grant.bluetooth_elicited_brain_stimulation.MainActivity"
    tools:showIn="@layout/activity_main">
    
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@drawable/icon2"
                style="@style/DashboardButton"
                android:text="@string/profile_button"
                android:id="@+id/profile_button"/>



        <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/DashboardButton"
            android:drawableTop="@drawable/icon2"
            android:layout_weight="1"
            android:text="@string/records_button"
            android:id="@+id/records_button"
            />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"/>

    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon2"
            style="@style/DashboardButton"
            android:text="@string/new_recording_button"
            android:id="@+id/new_recording_button"
            />

       <View
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon2"
            style="@style/DashboardButton"
            android:text="@string/new_button"
            android:id="@+id/new_button"
            />
    </LinearLayout>
</LinearLayout>